pipeline {
    agent { label 'ubuntu-agent' }

    environment {
        DOCKER_IMAGE = "surajp1234/surajp1234nodejsapp"
        DOCKERHUB_CREDENTIALS_ID = "dockerhub-creds"
    }

    stages {
        stage('Checkout') {
            steps {
                // Cloning from master branch
                git branch: 'master', url: 'https://github.com/SurajP5697/NodejsProject.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh """
                        echo "üì¶ Building Docker Image..."
                        docker build -t $DOCKER_IMAGE .
                    """
                }
            }
        }

        stage('Docker Login') {
            steps {
                withCredentials([usernamePassword(credentialsId: "${DOCKERHUB_CREDENTIALS_ID}", usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    sh """
                        echo "üîê Logging in to Docker Hub..."
                        echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin
                    """
                }
            }
        }

        stage('Push Docker Image') {
            steps {
                sh """
                    echo "üöÄ Pushing Docker Image to Hub..."
                    docker push $DOCKER_IMAGE
                """
            }
        }

        stage('Run Container') {
            steps {
                sh """
                    echo "üü¢ Stopping old container if running..."
                    docker stop nodejs-container || true
                    docker rm nodejs-container || true

                    echo "üöÄ Running new container..."
                    docker run -d --name nodejs-container -p 3000:3000 $DOCKER_IMAGE
                """
            }
        }
    }

    post {
        failure {
            echo '‚ùå Pipeline failed.'
        }
        success {
            echo '‚úÖ Pipeline completed successfully!'
        }
    }
}
